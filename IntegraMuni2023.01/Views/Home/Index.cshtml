@{
    ViewData["Title"] = "Home Page";
}
<head>
    <title>Carousel de Bootstrap</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <style>
        .carousel {
            margin-bottom: 60px;
        }

        .body {
            margin-bottom: 60px;
        }

        .carousel-container {
            width: 100%;
        }

        .carousel-caption {
            background-color: rgba(0, 0, 0, 0.7);
            color: #fff;
            padding: 10px;
        }

        .container {
            margin-bottom: 60px;
        }

        .card {
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: scale(1.05);
            }
    </style>
    <script>
        $(document).ready(function () {
            $('.carousel').carousel({
                interval: 30000
            });
        });
    </script>
</head>

<body>
    <div>
        @*Carousel*@
        <div id="myCarousel" class="carousel slide bg-light" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/css/img/tivives.png" class="d-block w-100" alt="..." style="margin:auto; width:auto ;height:auto; max-width:500px; max-height:500px">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Recarpeteo Tivives | Por fuera</h5>
                        <p>Reparación de carreteras en el sector de Tivives por fuera de la localidad.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/css/img/recarpeteo.png" class="d-block w-100" alt="..." style="margin:auto; width:auto ;height:auto; max-width:500px; max-height:500px">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Recarpeteo Tivives, sector dentro de la cooperativa</h5>
                        <p>Reparación de carreteras en el sector de Tivives por dentro de la localidad.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/css/img/aceras.png" class="d-block w-100" alt="..." style="margin:auto; width:auto ;height:auto; max-width:500px; max-height:500px">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Aceras peatonales | El Barón</h5>
                        <p>Realización de aceras peatonales en el sector El Barón cercanías de la Escuela de esta zona.</p>
                    </div>
                </div>
            </div>

            <!-- Controles -->
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon bg-secondary" aria-hidden="true"></span>
                <span class="sr-only">Anterior</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon bg-secondary" aria-hidden="true"></span>
                <span class="sr-only">Siguiente</span>
            </a>
        </div>
        @*Cards*@
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-4">
                    <div class="card rounded shadow d-flex h-100">
                        <img class="card-img-top" src="~/css/img/agua.jpeg" alt="Servicios de agua" />
                        <div class="card-body">
                            <h5 class="card-title">Servicios de agua</h5>
                            <p class="card-text">Visualizar los detalles de servicios de agua</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card rounded shadow d-flex h-100">
                        <img class="card-img-top" src="~/css/img/luz2.jpeg" alt="Servicio de luz" />
                        <div class="card-body">
                            <h5 class="card-title">Servicio de luz</h5>
                            <p class="card-text">Visualizar los detalles de servicios de luz</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card rounded shadow d-flex h-100">
                        <img class="card-img-top" src="~/css/img/basura.jpeg" alt="Recoleccion de basura" />
                        <div class="card-body">
                            <h5 class="card-title">Recoleccion de basura</h5>
                            <p class="card-text">Visualizar los detalles de la recoleccion de basura</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container mt-4">
            @*Espacio para oferta*@
            <div class="cta-section mb-4">
                <h2>¡Paga ahora tus servicios municipales en linea!</h2>
                <p>La municipalidad para la comodidad de nuestros clientes desarrollo este sitio web para una mayor facilidad de acceso</p>
            </div>

            <!-- Comodidades del hotel -->
            <div class="features-section ">
                <h3>Facilidades a los clientes</h3>
                <ul class="features-list">
                    <li>
                        <p>Pagos de tramites</p>
                    </li>
                    <li>
                        <p>Seccion de noticias</p>
                    </li>
                    <li>
                        <p>Descargar documentos</p>
                    </li>
                    <li>
                        <p>Consulta de servicios contratados</p>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</body>
